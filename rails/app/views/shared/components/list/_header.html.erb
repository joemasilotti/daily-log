<%# locals: (title:, path:) %>

<div class="border-b border-gray-200 bg-white px-4 py-5 sm:px-6">
  <div class="-ml-4 -mt-2 flex flex-wrap items-center justify-between sm:flex-nowrap">
    <div class="ml-4 mt-2">
      <h3 class="text-base font-semibold leading-6 text-gray-900"><%= title %></h3>
    </div>
    <%= link_to path, class: "rounded-full bg-primary-600 p-1.5 text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600 mt-2" do %>
      <span class="sr-only">Add</span>
      <%= inline_svg "icons/mini/plus.svg", class: "w-5 h-5" %>
    <% end %>
  </div>
</div>
